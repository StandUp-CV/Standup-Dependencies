material Standup/Clock/Cubemap_Trans
{
	technique
	{
		pass
		{
			
			texture_unit
			{
				cubic_texture jajspace2.jpg combinedUVW
				tex_address_mode clamp
				env_map cubic_reflection
				//colour_op_ex source1 src_manual src_current 1 0 0
				alpha_op_ex source1 src_manual src_current 0.2
			}
			lighting on

			ambient 0.0 0.0 0.0 1
			diffuse 0.5 0.5 0.5 1
			specular 1 1 1 1
			emissive 0.1 0.1 0.1 1
			scene_blend alpha_blend
			depth_write off
		}
	}
}

