material Standup/TimedSkyBox
{
	technique
	{
		pass
		{
			lighting off
			depth_write off

			texture_unit
			{
				cubic_texture jajspace2.jpg separateUV
				tex_address_mode clamp
			}
		}
	}

	// HDR technique (fake)
	technique
	{
		scheme HDR

		pass
		{
			lighting off
			depth_write off

			vertex_program_ref Ogre/BasicVertexPrograms/AmbientOneTextureUnified
			{
				param_named ambient float4 1 1 1 1
			}
			fragment_program_ref Examples/MorningSkyBoxHDRfp
			{
			}

			texture_unit
			{
				cubic_texture jajspace2.jpg separateUV
				tex_address_mode clamp
			}
		}
	}
}

material Standup/RustySteel
{
	technique
	{
		pass
		{
			texture_unit
			{
				colour_op_ex modulate src_diffuse src_current
				//alpha_op_ex source1 src_manual src_current 0.75
			}
			lighting on

			ambient 0.3 0.3 0.3 1
			specular 0.0 0.0 0.0 1
			diffuse 0.66 0.66 0.66 1
			emissive 0 0 0 1
			scene_blend colour_blend
			depth_write on
		}
	}
}